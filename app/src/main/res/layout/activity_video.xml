    <RelativeLayout
        android:id="@+id/rl_but_file"
        android:layout_width="@dimen/px_1000"
        android:layout_height="170px"
        android:layout_marginTop="30px"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:background="@drawable/item_button_bg_selector">


        <TextView
            android:layout_width="@dimen/px_255"
            android:layout_height="wrap_content"
            android:layout_marginTop="62px"
            android:layout_marginBottom="62px"
