            android:layout_marginLeft="@dimen/px_48"
            android:layout_marginTop="42px"
            android:text="控制"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_18"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/px_50"
            android:layout_marginBottom="@dimen/px_43"
            android:orientation="horizontal">


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/but_screen_capture"
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    android:clickable="true"
                    android:background="@drawable/rb_comm_screen_capture_drawable_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="截 屏"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/but_video_surveillance"
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    android:clickable="true"
                    android:background="@drawable/rb_comm_video_surveillance_drawable_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="视频录像"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/but_communicate"
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    android:clickable="true"
                    android:background="@drawable/rb_comm_communicate_drawable_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="双向通话"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    android:clickable="true"
                    android:background="@drawable/rb_comm_sound_off_drawable_selector"/>
                <TextView
                    android:id="@+id/but_sound_on_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="静 音"/>

            </LinearLayout>

        </LinearLayout>


